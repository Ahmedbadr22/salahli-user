<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.M3.Sys.Typescale.TitleLarge.Logo" parent="TextAppearance.M3.Sys.Typescale.TitleLarge">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/_35sdp</item>
    </style>


    <style name="TextAppearance.M3.Sys.Typescale.TitleSmall.Title" parent="TextAppearance.M3.Sys.Typescale.TitleSmall">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_18sdp</item>
    </style>

    <style name="TextAppearance.M3.Sys.Typescale.LabelLarge.Header" parent="TextAppearance.M3.Sys.Typescale.LabelLarge">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="TextAppearance.M3.Sys.Typescale.LabelMedium.PhoneNumber" parent="TextAppearance.M3.Sys.Typescale.LabelMedium">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="TextAppearance.M3.Sys.Typescale.TitleMedium.MediumTitle" parent="TextAppearance.M3.Sys.Typescale.TitleLarge">
        <item name="android:textSize">@dimen/_25sdp</item>
    </style>

    <style name="Base.Widget.AppCompat.Button.MainButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton.MainOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="Base.Widget.AppCompat.ImageButton.AppBarIconButton" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:background">@drawable/rounded_button_shape</item>
        <item name="android:backgroundTint">@color/gray</item>
    </style>

    <style name="Widget.MaterialComponents.CardView.ProfileClickableCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="Widget.MaterialComponents.CardView.ProfileCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="Widget.MaterialComponents.CardView.ClickableBorderCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeColor">@color/gray</item>
        <item name="strokeWidth">1dp</item>
    </style>



</resources>